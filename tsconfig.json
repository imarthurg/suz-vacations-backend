{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@App/*": ["src/*"],
      "@Utils/*": ["utils/*"],
      "@Support/*": ["specs/support/*"],
    }
  },
  "include": [
    "./src/**/*",
    "./specs/**/*",
    "./ormconfig.js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
